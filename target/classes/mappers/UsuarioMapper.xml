<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="edu.eci.pdsw.persistence.mybatisimpl.mappers.UsuarioMapper">

	<resultMap id="UsuarioResult" type="Usuario">
		<id property='correo' column='correo'/>
		<result property='nombre' column='nombre'/>
		<result property='tipo' column='tipo' typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
		<association property="area" column='area' resultMap="edu.eci.pdsw.persistence.mybatisimpl.mappers.AreaMapper.AreaResult"></association>
		<collection property="iniciativas" ofType="Iniciativa" resultMap="edu.eci.pdsw.persistence.mybatisimpl.mappers.IniciativaMapper.IniciativaResult"></collection>
		<collection property="votos" ofType="Iniciativa" resultMap="edu.eci.pdsw.persistence.mybatisimpl.mappers.IniciativaMapper.IniciativaResult"></collection>
	</resultMap>
	
	<insert id="crearUsuario" parameterType="Usuario" >		
		INSERT INTO Usuarios(correo, nombre, tipo, area)
		VALUES(#{usr.correo},#{usr.nombre}, #{usr.tipo}, #{usr.area.id});	
	</insert>
	
	<select id="consultarUsuario" parameterType="String" resultMap="UsuarioResult">
		SELECT 
		*
		FROM usuarios as usr, areas
		WHERE usr.area = areas.id AND usr.correo=#{correo};
	</select>
	
	<select id="consultarUsuarios" resultMap="UsuarioResult">
		SELECT
			usr.correo, 
			usr.nombre,
			usr.tipo,
			usr.area,
			areas.nombre,
			areas.descripcion			
		FROM usuarios as usr, areas
		WHERE usr.area = areas.id;
	</select>
	
	<update id="asignarPerfil">
		UPDATE usuarios SET tipo=#{rol} WHERE correo=#{correo};
	</update>
	

</mapper>
