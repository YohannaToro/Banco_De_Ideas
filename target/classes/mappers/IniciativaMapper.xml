<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="edu.eci.pdsw.persistence.mybatisimpl.mappers.IniciativaMapper">

	<resultMap id="IniciativaResult" type="Iniciativa">
		<id property='no_iniciativa' column='no_iniciativa'/>
		<result property='nombre' column='nombreIniciativa'/>
		<result property='descripcion' column='descripcionIniciativa'/>
		<result property='fechaPropuesta' column='fechaPropuestaIniciativa'/>
		<result property='fechaCierre' column='fechaCierreIniciativa'/>
		
		<result property='estado' column='estadoIniciativa' typeHandler="org.apache.ibatis.type.EnumTypeHandler" />
		
		<association property="usuario" column='usuarioIniciativa' resultMap="edu.eci.pdsw.persistence.mybatisimpl.mappers.UsuarioMapper.UsuarioResult"></association>
		<collection property="iniciativas" ofType="Iniciativa" resultMap="edu.eci.pdsw.persistence.mybatisimpl.mappers.IniciativaMapper.IniciativaResult"></collection>
		<collection property="votos" ofType="Iniciativa" resultMap="edu.eci.pdsw.persistence.mybatisimpl.mappers.IniciativaMapper.IniciativaResult"></collection>
	</resultMap>
	
	<insert id="crearIniciativa" parameterType="Iniciativa">
		INSERT INTO Iniciativas (nombre,descripcion,fechapropuesta,estado,proponente) 
		VALUES (#{ini.nombre},#{ini.descripcion},now(),#{ini.estado.toString()} ,#{ini.proponente}); 
	</insert>
	
</mapper>